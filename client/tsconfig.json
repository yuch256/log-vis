{
  "compilerOptions": {
    "outDir": "/dist",
    "module": "es6",
    "target": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@c*": ["./src/components/*"],
      "@p*": ["./src/pages/*"],
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "jest",
    "dist",
  ],
}